<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/layout_toolbar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"/>

    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:layout_below="@+id/layout_toolbar"
        android:id="@+id/profile_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/male"/>

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:layout_below="@id/profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/go_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NIM"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:layout_below="@id/welcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/go_doc"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_doc"
        android:layout_below="@id/go_menu"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/go_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ketentuan Layanan"
        android:textSize="18dp"
        android:layout_below="@id/go_menu"
        android:layout_toRightOf="@id/go_doc"
        android:layout_marginLeft="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"/>

    <ImageView
        android:id="@+id/go_secure"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_secure"
        android:layout_below="@id/go_doc"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/go_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kebijakan Privasi"
        android:textSize="18dp"
        android:layout_below="@id/go_text"
        android:layout_toRightOf="@id/go_doc"
        android:layout_marginLeft="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"/>

    <Button
        android:id="@+id/btn_logout"
        android:layout_centerHorizontal="true"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Keluar"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/colorPrimary" />

</RelativeLayout>